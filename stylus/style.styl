//颜色定义规范
$bg-dark-gray = #31394d
$white = #ece7df
$blue-black = #262d3c
$imgSize = 70px
$red = #fc4053
$blue = rgb(23,137,206)
$text-white = rgb(250,250,250)
$green = rgb(37,228,122)
$yellow = #ffd124
$yellow2 = rgb(253,187,44)

*
  font-family 'Microsoft YaHei', 'MicrosoftJhengHei';

.navigation
  background-color $bg-dark-gray
  border-bottom 2px solid $blue-black
  padding-left 2%
  #menuTextLeft
    color $white
    cursor pointer
    font-size 16px
    font-weight 200
    transition 0.3s
    &:hover
      background-color $blue
      transform: scale(1.1)

.navbar-nav
  li
    a
      padding-bottom 0
      padding-top 1px 

@keyframes typing
  0%
    width 0
@keyframes blink-caret
  50%
    border-color transparent
.intro-header
  padding-top 0
  padding-bottom 200px
  text-align center
  background $bg-dark-gray
.intro-message
  position relative
  padding-top 20%
  padding-bottom 5%
  color $white
  h1
    font-size 50px
  h3
    left 30%
    font bold 200% Consolas, Monaco, monospace
    border-right .1em solid
    width 13ch
    margin 1em 40%
    white-space nowrap 
    overflow hidden
    animation typing 1s steps(13, end),blink-caret .5s step-end infinite alternate;
#particles-js 
  position absolute
  top 0
  left 0
  height 100%
  width 100%

// content-section-a
.content-section-a
  text-align center
  padding-top 5%
  margin-bottom 5%
  h1
    display inline-block
    margin-right 10px
    margin-bottom 20px
  i 
    font-size 30px
  .lead 
    margin-bottom 4%
  img.icon
    width 150px
    height 150px
  .intro_p
    margin-top 10px
    font-size 18px
    color $bg-dark-gray
    margin-top 10%
    text-shadow 0 0 1px #eee
    transition 0.2s
    &:hover
      transform scale(1.1)

// skills
.intro-row
  text-align left
  background-color $blue
  padding 1em
  color $text-white
  h3
    margin-left 10%
    font-size 20px
    font-weight 100
    text-shadow 0  0 1px #fff
    span 
      margin-left 5%
      text-shadow none 
      white-space pre
      font-size 20px
.hobby
  background-color $green

// content-section-b
.content-section-b
  text-align center
  padding-top 7%
  padding-bottom 7%
  h1
    margin-right 10px
    margin-bottom 20px
.cf:before
.cf:after
  content " "
  display table
.cf:after
  clear both
.boxes
  display block
  width 44%
  height 320px
  background #ffee44
  position relative
  overflow hidden
  float left 
  margin 2%
  cursor pointer
  box-shadow 0 0 5px $white
  .da-image
    min-height 100%
    width 100%
.overlay
  display block
  position absolute
  width 100%
  height 100%
  top 0%
  left -100%
  color #fff
  background-color $blue
  z-index 10
  text-align center
  p
    font-size 50px
    font-weight 300
    padding-top 120px
.container-imgs
  width 1170px
  display block
  margin 0
  padding-top 1%
  padding-bottom 3%
@keyframes shine
  50%
    transform scale(1.1)
@keyframes breath 
  50% 
    transform scale(1.25);
  100%
    transform scale(1);   
.breathing
  animation breath 1.5s;
.btn-success
  animation 1s shine infinite 
  i
    text-align center
    padding 0 25px
    font-size 25px

// content-section-c
.content-section-c
.content-section-d
  text-align center
  padding-top 5%
  padding-bottom 6%
  background-color $white
  color $text-white 
  h1
    margin-right 10px
    margin-bottom 20px
  .row
    padding-bottom 3%

.according-title,.according-list a    
  transition all 0.5s ease
  display block
  color #0a8cd2
  border-radius 5px
  cursor pointer
  text-decoration none
.according-title
  font-weight 500
  line-height 1.8
.according-list a 
  font-size 20px
  line-height 2
.according-title:hover,.according-list a:hover
  color #fff 
  background #56ad56 
  text-indent 30px 
.according-title.closed + .according-list a
  transform scale(1,0)
  transition-duration 0s
  height 0  
// content-section-d
.content-section-d
  background-color #000
  opacity 0.8
  color #fff
  h1
    margin-bottom 30px
  p:nth-child(1)
    margin-left -88px
  i
    font-size 30px
    margin-right 10px


